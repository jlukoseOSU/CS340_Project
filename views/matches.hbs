<h1>Matches</h1>

{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            <th>Match ID</th>
            <th>Opponent</th>
            <th>Date</th>
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the matchID, oppenent name, match date}}
        {{#each matches}}
        <tr>
            <td>{{this.matchID}}</td>
            <td>{{this.opponentName}}</td>
            <td>{{this.matchDate}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{! CREATE form }}
<h2>Create a Match</h2>
<form class='cuForm' id='create_match_form' method='POST' action='/matches/create'>
    <label for='create_match_opponentName'>Opponent Name: </label>
    <input type='text' name='create_match_opponentName' id='create_match_opponentName' required />

    <label for='create_match_matchDate'>Match Date: </label>
    <input type='date' name='create_match_matchDate' id='create_match_matchDate' />

    <input type='submit' />
</form>